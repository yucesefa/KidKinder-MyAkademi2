@model List<KidKinder.Entities.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Gelen Mesajlar Sayfası</h2>

<table class="table table-table table-hover">
    <tr>
        <th>#</th>
        <th>Gonderen</th>
        <th>Mail</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Tarih</th>
        <th>Durum</th>
        <th>Mesajı Aç</th>
        <th>Mesajı Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        if (Model == null)
        {
            <h3>Şuanda gösterilecek mesajınız yok !</h3>
        }
        else
        {
            if (item.IsRead == true)
            {
                <tr>
                    <td>@item.ContactId</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Email</td>
                    <td>@item.Subject</td>
                    <td>@item.Message</td>
                    <td>@item.SendDate.ToString("dd MMMM yyyy HH:mm")</td>
                    <td>@item.IsRead</td>
                    <td><a href="/ContactAdmin/MessageDetail/@item.ContactId" class="btn btn-primary">Mesajı Aç</a></td>
                    <td><a href="/ContactAdmin/DeleteMessage/@item.ContactId" class="btn btn-danger">Mesajı Sil</a></td>
                </tr>
            }
            else
            {
                <tr style="font-weight: bold;">
                    <td>@item.ContactId</td>
                    <td><span class="fa fa-circle mr-3"></span>@item.NameSurname</td>
                    <td>@item.Email</td>
                    <td>@item.Subject</td>
                    <td>@item.Message</td>
                    <td>@item.SendDate.ToString("dd MMMM yyyy HH:mm")</td>
                    <td>@item.IsRead</td>
                    <td><a href="/ContactAdmin/MessageDetail/@item.ContactId" class="btn btn-primary">Mesajı Aç</a></td>
                    <td><a href="/ContactAdmin/DeleteMessage/@item.ContactId" class="btn btn-danger">Mesajı Sil</a></td>
                </tr>
            }
        }
    }
</table>

