@model List<KidKinder.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="pcoded-inner-content">
    <!-- Main-body start -->
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5>Hakkımızda</h5>
                        <span>Hakkımızda Sayfası ile iligli işlemler</span>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                <li><i class="fa fa-minus minimize-card"></i></li>
                                <li><i class="fa fa-refresh reload-card"></i></li>
                                <li><i class="fa fa-trash close-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table table-hover">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Alt Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Büyük Resim</th>
                                        <th>Küçük Resim</th>
                                        <th>Sil</th>
                                        <th>Düzenle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AboutId</td>
                                            <td>@item.Title</td>
                                            <td>@item.Header</td>
                                            <td>@item.Description</td>
                                            <td><img src="@item.AboutBigImageUrl" width="100" height="100"/></td>
                                            <td><img src="@item.AboutSmallImageUrl" width="100" height="100" /></td>
                                            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger" style="margin-top:30px">Sil</a></td>
                                            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-success" style="margin-top:30px">Düzenle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Yazısı Ekle</a>
                            <a href="/AboutList/Index/" class="btn btn-warning" style="margin-left:20px">Hakkımda Liste Bölümü</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

