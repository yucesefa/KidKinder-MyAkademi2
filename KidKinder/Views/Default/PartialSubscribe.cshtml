@model KidKinder.Entities.MailSubscribe
<div class="col-lg-3 col-md-6 mb-5">
    <h3 class="text-primary mb-4">Abone Ol!</h3>
    @using (Html.BeginForm("PartialSubscribe", "Default", FormMethod.Post))
    {
        <div class="form-group">
            @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "İsminiz" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Mail Adresiniz" })
        </div>
        <div>
            <button class="btn btn-primary btn-block border-0 py-3"
                    type="submit">
                Abone Ol
            </button>
        </div>
    }
</div>
