@model List<KidKinder.Entities.Teacher>
﻿<div class="container-fluid pt-5" id="teachers">
    <div class="container">
        <div class="text-center pb-2">
            <p class="section-title px-5">
                <span class="px-2">Öğretmenlerimiz</span>
            </p>
            <h1 class="mb-4">Öğretmenlerimizle Tanışın</h1>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 text-center team mb-5" id="#teachers">
                    <div class="position-relative overflow-hidden mb-4"
                         style="border-radius: 100%">
                        <img class="img-fluid w-100" src="@item.ImageUrl" alt="" />
                        <div class="team-social d-flex align-items-center justify-content-center w-100 h-100 position-absolute">
                            <a class="btn btn-outline-light text-center mr-2 px-0"
                               style="width: 38px; height: 38px"
                               href="https://twitter.com/i/flow/login?input_flow_data=%7B%22requested_variant%22%3A%22eyJsYW5nIjoidHIifQ%3D%3D%22%7D">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="btn btn-outline-light text-center mr-2 px-0"
                               style="width: 38px; height: 38px"
                               href="https://www.facebook.com/?locale=tr_TR">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="btn btn-outline-light text-center px-0"
                               style="width: 38px; height: 38px"
                               href="https://tr.linkedin.com/">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>

                    </div>
                    <h4>@item.NameSurname</h4>
                    <i>@item.Branch.BranchName</i>
                </div>
            }
        </div>
    </div>
</div>
